<!DOCTYPE html>
<html lang="es">
	<head>
		<title>Actualizar</title>
		<%- include('../partials/head'); %>
		<link rel="stylesheet" href="../../css/estilos.css">
	</head>
<body>
	<header>
		<%- include('../partials/header'); %>
	</header>
	<div class="full-box page-header">
		<h3 class="text-left">
		   <i class="fa fa-search"></i> &nbsp; ACTUALIZACION DE USUARIOS
		</h3>
	 </div>
			<!-- Content here-->
			<form id="form" action="/updating?id=<%= data.id %>" method="post" class="form-neon" autocomplete="off">
				<fieldset>
					<legend><i class="fas fa-user"></i> &nbsp; Información básica</legend>
					<label class="barra" for="">ID</label>
					<input disabled type="text" class="form-control" name="id" id="id" value="<%= data.id %>" maxlength="40">
					<table>
						<td>
							<div class="grupo">
								<input  maxlength="40" value="<%= data.name %>" type="text" name="name" id="name" required><span class="barra"></span>
								<label for="">Nombre</label>
							</div> 
						</td>
						<td>
							<div class="grupo">
								<input  value="<%= data.lastname %>" maxlength="40" type="text" name="lastname" id="lastname" required><span class="barra"></span>
								<label for="">Apellido</label>
							</div> 
						</td>
					</table>
					<div class="grupo">
						<input value="<%= data.email %>" maxlength="150" type="text" name="email" id="email" required><span class="barra"></span>
						<label for="">Correo</label>
					</div>
					<div class="grupo">
						<label for="" class="barra">Rango</label><br>
						<select name="rank" id="rank" class="custom-select">
							<option value="admin">Administrador</option>
							<option value="user">Usuario</option>
							<option value="operator">Operador</option>
						</select>
					</div>
				</fieldset>
				<br>
				<p class="text-center" style="margin-top: 40px;">
					<button type="submit" class="blue_button"><i class="fas fa-sync-alt"></i> &nbsp; ACTUALIZAR</button>
				</p>
			</form>
			<form class="form-neon" action="/delete?id=<%= data.id %>" method="post">
				<p class="text-center">
					<button type="submit" class="red_button"><i class="far fa-trash-alt"></i> &nbsp; ELIMINAR CUENTA</button>
				</p>
			 </form>
	</body>
	<script defer>$('#rank').val("<%= data.rank %>");</script>
	<script>
		// Prevent self rank change
		var check_rank = function() {
			if(<%= id %> === <%= data.id %>) {
				$("#rank").prop('disabled', 'disabled');
 	   		}
		};
	$(check_rank);
	$("#rank").change(check_rank);
	</script>
	<script src="../../js/main.js" ></script>


</html>